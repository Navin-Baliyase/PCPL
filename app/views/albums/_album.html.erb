  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% albums.each do |album| %>
          <% if !album.blank? %>
            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
                <%= link_to (image_tag album.photos.first.variant(resize: "348x225"), class: "card-img-top"), album if album && album.photos %>
                <div class="card-body">
				        <% if !album.owner.blank? %>
                  <p class="lead text-muted">Owner : <%= album.owner %></p>
				        <% end %>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <%= button_tag(type: 'button', class: "btn btn-sm btn-outline-secondary") do %>
                        <%= link_to 'View', album %>
                      <% end %>
                      <%= button_tag(type: 'button', class: "btn btn-sm btn-outline-secondary") do %>
                        <%= link_to 'Edit', edit_album_path(album) %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>