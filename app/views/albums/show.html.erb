<div class="jumbotron">
  <div class="container">
    <h2 class="pcpl-center"> <%= @album.name if @album && @album.name %> Slideshow</h2>
    <div class="pcpl-content pcpl-display-container">
      <% @album.photos.each do |photo| %>
        <%= image_tag (photo.variant(resize: "800x450")), {class: "mySlides", alt: "myiamge", style: "width:100%"} %>
      <% end %>
      <button class="pcpl-button pcpl-black pcpl-display-left" onclick="plusDivs(-1)">&#10094;</button>
      <button class="pcpl-button pcpl-black pcpl-display-right" onclick="plusDivs(1)">&#10095;</button>
    </div>
    <h2 class="pcpl-center">BY: <%= @album.owner if @album && @album.owner %></h2>
  </div>
</div>

<script>
    var slideIndex = 1;
    showDivs(slideIndex);
    function plusDivs(n) {
        showDivs(slideIndex += n);
    }
    function showDivs(n) {
        var i;
        var x = document.getElementsByClassName("mySlides");
        if (n > x.length) {
            slideIndex = 1
        }
        if (n < 1) {
            slideIndex = x.length
        }
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        x[slideIndex - 1].style.display = "block";
    }
</script>












